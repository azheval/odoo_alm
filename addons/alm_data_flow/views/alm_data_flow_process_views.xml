<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Process -->
    <record id="view_alm_process_list" model="ir.ui.view">
        <field name="name">alm.process.list</field>
        <field name="model">alm.process</field>
        <field name="arch" type="xml">
            <list string="Processes">
                <field name="name"/>
                <field name="application_id"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="alm_data_flow.view_process_search" model="ir.ui.view">
        <field name="name">alm.process.search</field>
        <field name="model">alm.process</field>
        <field name="arch" type="xml">
            <search string="Search Processes">
                <field name="name"/>
                <field name="application_id"/>
                <separator/>
                <filter string="Configurable Unit" name="group_by_unit" context="{'group_by': 'application_id'}"/>
            </search>
        </field>
    </record>

    <!-- Form View for Process -->
    <record id="view_alm_process_form" model="ir.ui.view">
        <field name="name">alm.process.form</field>
        <field name="model">alm.process</field>
        <field name="arch" type="xml">
            <form string="Process">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Sales Order Validation Process"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="application_id"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Nodes" name="nodes_page">
                            <field name="node_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="node_type"/>
                                    <field name="function_id"/>
                                    <field name="position_x"/>
                                    <field name="position_y"/>
                                </list>
                            </field>
                        </page>
                        <page string="Edges" name="edges_page">
                            <field name="edge_ids">
                                <list editable="bottom">
                                    <field name="source_node_id"/>
                                    <field name="target_node_id"/>
                                    <field name="edge_type"/>
                                    <field name="condition_expression"/>
                                </list>
                            </field>
                        </page>
                        <page string="Metadata">
                            <group>
                                <field name="input_metadata_object_ids" widget="many2many_tags"/>
                                <field name="output_metadata_object_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Diagram" name="diagram_page">
                            <field name="diagram_data" widget="process_diagram_widget" class="w-100"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action for Process -->
    <record id="action_alm_process" model="ir.actions.act_window">
        <field name="name">Processes</field>
        <field name="res_model">alm.process</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': 'application_id'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new process.
            </p><p>
                Processes are sequences of functions or steps that describe
                how data is handled within or between applications.
            </p>
        </field>
    </record>
</odoo>