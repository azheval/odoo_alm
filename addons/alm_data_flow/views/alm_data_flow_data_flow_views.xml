<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Data Flow -->
    <record id="view_alm_data_flow_list" model="ir.ui.view">
        <field name="name">alm.data.flow.list</field>
        <field name="model">alm.data.flow</field>
        <field name="arch" type="xml">
            <list string="Data Flows">
                <field name="name"/>
                <field name="application_ids" widget="many2many_tags"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-info="status == 'draft'" decoration-muted="status == 'inactive'" decoration-danger="status == 'deprecated'"/>
            </list>
        </field>
    </record>

    <!-- Form View for Data Flow -->
    <record id="view_alm_data_flow_form" model="ir.ui.view">
        <field name="name">alm.data.flow.form</field>
        <field name="model">alm.data.flow</field>
        <field name="arch" type="xml">
            <form string="Data Flow">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Cross-System Order to Cash"/></h1>
                    </div>
                    <group>
                        <field name="application_ids" widget="many2many_tags"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Nodes">
                            <field name="node_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="node_type"/>
                                    <field name="process_id" invisible="node_type != 'process'"/>
                                    <field name="application_id" invisible="node_type != 'process'"/>
                                    <field name="position_x"/>
                                    <field name="position_y"/>
                                </list>
                            </field>
                        </page>
                        <page string="Edges">
                            <field name="edge_ids">
                                <list editable="bottom">
                                    <field name="source_node_id"/>
                                    <field name="target_node_id"/>
                                    <field name="edge_type"/>
                                    <field name="condition_expression"/>
                                </list>
                            </field>
                        </page>
                        <page string="Metadata">
                            <group>
                                <field name="input_metadata_object_ids" widget="many2many_tags"/>
                                <field name="output_metadata_object_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Diagram">
                            <field name="diagram" widget="data_flow_diagram_widget" class="w-100"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action for Data Flow -->
    <record id="action_alm_data_flow" model="ir.actions.act_window">
        <field name="name">Data Flows</field>
        <field name="res_model">alm.data.flow</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new data flow.
            </p><p>
                Data flows describe how data moves between or within applications,
                involving specific processes and metadata.
            </p>
        </field>
    </record>
</odoo>
