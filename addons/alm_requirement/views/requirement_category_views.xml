<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Requirement Category -->
    <record id="view_alm_requirement_category_tree" model="ir.ui.view">
        <field name="name">alm.requirement.category.tree</field>
        <field name="model">alm.requirement.category</field>
        <field name="arch" type="xml">
            <list string="Requirement Categories" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View for Requirement Category -->
    <record id="view_alm_requirement_category_form" model="ir.ui.view">
        <field name="name">alm.requirement.category.form</field>
        <field name="model">alm.requirement.category</field>
        <field name="arch" type="xml">
            <form string="Requirement Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
