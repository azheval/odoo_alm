<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bug_view_form_inherit_alm_requirement" model="ir.ui.view">
        <field name="name">bug.bug.form.inherit.alm.requirement</field>
        <field name="model">alm.bug</field>
        <field name="inherit_id" ref="alm_bug_tracker.view_alm_bug_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="requirement_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
