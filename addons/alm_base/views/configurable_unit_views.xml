<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Configurable Unit -->
    <record id="alm_base.view_configurable_unit_list" model="ir.ui.view">
        <field name="name">alm.configurable.unit.list</field>
        <field name="model">alm.configurable.unit</field>
        <field name="arch" type="xml">
            <list string="Configurable Units">
                <field name="name"/>
                <field name="technical_name"/>
                <field name="unit_type"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>

    <!-- Kanban View for Configurable Unit -->
    <record id="alm_base.view_configurable_unit_kanban" model="ir.ui.view">
        <field name="name">alm.configurable.unit.kanban</field>
        <field name="model">alm.configurable.unit</field>
        <field name="arch" type="xml">
            <kanban default_group_by="unit_type">
                <field name="name"/>
                <field name="technical_name"/>
                <field name="unit_type"/>
                <field name="user_ids"/>
                <field name="tag_ids"/>
                <field name="development_version_count"/>
                <field name="published_version_count"/>
                <field name="unsupported_version_count"/>
                <field name="new_bug_count"/>
                <field name="confirmed_bug_count"/>
                <field name="fixed_bug_count"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click rounded border shadow p-2 mb-3 bg-white">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><small><field name="technical_name"/></small></div>
                                <div class="mt-2">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-6">
                                        <small>
                                            Versions:
                                            <span class="text-info">(<field name="development_version_count"/>)</span>
                                            <span class="text-success">(<field name="published_version_count"/>)</span>
                                            <span class="text-muted">(<field name="unsupported_version_count"/>)</span>
                                        </small>
                                    </div>
                                    <div class="col-6 text-right">
                                        <small>
                                            Bugs:
                                            <span class="text-primary">(<field name="new_bug_count"/>)</span>
                                            <span class="text-danger">(<field name="confirmed_bug_count"/>)</span>
                                            <span class="text-success">(<field name="fixed_bug_count"/>)</span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View for Configurable Unit -->
    <record id="alm_base.view_configurable_unit_form" model="ir.ui.view">
        <field name="name">alm.configurable.unit.form</field>
        <field name="model">alm.configurable.unit</field>
        <field name="arch" type="xml">
            <form string="Configurable Unit">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. My Main Configuration"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="technical_name"/>
                            <field name="unit_type"/>
                            <div class="o_row">
                                <label for="new_bug_count" string="Bugs: "/>
                                <span class="text-primary">(<field name="new_bug_count" class="oe_inline" nolabel="1"/>)</span>
                                <span class="text-danger">(<field name="confirmed_bug_count" class="oe_inline" nolabel="1"/>)</span>
                                <span class="text-success">(<field name="fixed_bug_count" class="oe_inline" nolabel="1"/>)</span>
                            </div>
                        </group>
                        <group string="Categorization">
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Versions">
                            <field name="version_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="state" widget="badge" decoration-success="state == 'published'" decoration-info="state == 'development'" decoration-muted="state == 'unsupported'"/>
                                    <field name="publication_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
</odoo>