<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root menu for Bug Tracker -->
    <menuitem
        id="menu_bug_tracker_root"
        name="Bug Tracker"
        parent="alm_base.menu_root"
        sequence="40"/>

    <!-- Action for Bugs -->
    <record id="action_alm_bug" model="ir.actions.act_window">
        <field name="name">Bugs</field>
        <field name="res_model">alm.bug</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_alm_bug_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new bug report.
            </p>
        </field>
    </record>

    <!-- Menu item for Bugs -->
    <menuitem
        id="menu_alm_bug"
        name="Bugs"
        parent="menu_bug_tracker_root"
        action="action_alm_bug"
        sequence="10"/>
</odoo>
